//IP address ranging from 0 :255 in which first field must be 1 to 233

class IPaddr;

   rand bit[7:0] seg[4];  //array

  constraint IP_range{
          seg[0] inside {[1:233]} ;
          foreach( seg[i])
              seg[i] inside {[0:255]} ;
}

   function void display();
      $display("IP = %0d.%0d.%0d.%0d" , seg[0] , seg[1] , seg[2] , seg[3]);
   endfunction

endclass

module exmtb;

   initial begin
    IPaddr obj = new();

    repeat(20) begin
      obj.randomize() ;
      obj.display();
    end
endmodule

//output

