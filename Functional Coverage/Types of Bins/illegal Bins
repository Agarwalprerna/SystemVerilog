
module exmtb;

 int y;
 int values[$] = '{10,20,40,50,60,70,80,90};

covergroup cg;
 cover_point_y : coverpoint y{
                     
                   
                    illegal_bins b1 = {60,70,90};       //these values are hit so simulation results in error
                     bins b2 = { 40,70};
                     //since bins are not explicitly deifned so SV creates implicit bins automatically.
                 }
endgroup

cg cg_inst = new();

initial begin
   foreach(values[i]) begin
         y = values[i];
         cg_inst.sample();
  end
end
endmodule

//OUTPUT
run -all
# ** Error: (vsim-8565) Illegal state bin was hit at value=60. The bin counter for the illegal bin '\/exmtb/cg_inst .cover_point_y.b1' is 1.
#    Time: 0 ps  Iteration: 0  Instance: /exmtb
# ** Error: (vsim-8565) Illegal state bin was hit at value=70. The bin counter for the illegal bin '\/exmtb/cg_inst .cover_point_y.b1' is 2.
#    Time: 0 ps  Iteration: 0  Instance: /exmtb
# ** Error: (vsim-8565) Illegal state bin was hit at value=90. The bin counter for the illegal bin '\/exmtb/cg_inst .cover_point_y.b1' is 3.
#    Time: 0 ps  Iteration: 0  Instance: /exmtb
