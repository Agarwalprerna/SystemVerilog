module exmtb;

    mailbox mbx = new(2);  //utmost 2 items hold
  //2 processes are concurrently active


// block 1 keeps putting items into the mailbox
initial begin
    for(int i =0 ; i<5 ; i++)begin
    #1
    mbx.put(i);
    $display(" %0t Thread0-> put item #%0d" , $time , i);
     end
end

//block 2 keeps getting item from the mailbox
initial begin

    forever begin
       int i;
       #2;
        mbx.get(i);
       $display(" %0t thread1 -> Got item #%0d " , $time , i);
    end
end
endmodule
