class packet;
  rand integer  addr;
  constraint addr_range1 {addr<100 ; addr>0 ;}
endclass

// different Constraint names - No OVERRIDING

class child extends packet;
  constraint  addr_range2 { addr > 50 ;}  // constraint block in a child class uses the same name as one in the parent class , it overrides the parent constraint block.
endclass

// randomize() task os virtual , so overridding a constraint works even when casting child objects
// to parent class handle

module exmtb;

    packet P1;
    child P2;
    integer i ;

  initial begin
    P2= new();
    P1 = P2;  //casting child object to parent class handle
    
    for(i =0 ; i<10 ; i++)
      if(P1.randomize())
       $display("successfull: addr = %0d" , P1.addr);
      else
       $display("failed");    
  end
endmodule


//output
run -all
# successfull: addr = 63
# successfull: addr = 96
# successfull: addr = 70
# successfull: addr = 94
# successfull: addr = 96
# successfull: addr = 71
# successfull: addr = 63
# successfull: addr = 70
# successfull: addr = 52
# successfull: addr = 64
