class base;
  
  function void pre_randomize;
    $display("BASE PRE RANDOMIZATION");
  endfunction
  
  function void post_randomize;
    $display("BASE POST_RANDOMIZATION");
  endfunction
  
endclass

class child extends base;
  
  function void pre_randomize;
    super.pre_randomize();
    $display("EXTEND PRE_randomization");
  endfunction
  
  function void post_randomize;
    $display("extend Post_randomization");
  endfunction
  
endclass


program pre_post_exp;
  
   base B ;
  child E = new();
  
 initial begin
    B= E;
    
    if(B.randomize());
   $display("randomization done");
 end
  
 
endprogram


//output
 Verilator: Walltime 6.858 s (elab=0.001, cvt=0.006, bld=6.843); cpu 0.015 s on 8 threads; alloced 30.281 MB
BASE PRE RANDOMIZATION
EXTEND PRE_randomization
extend Post_randomization
randomization done
