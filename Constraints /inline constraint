class base;
    rand integer a;
    constraint deafult_c { a>0 ; a<100;}
endclass

program exmtb;
  base obj;

initial begin
   obj = new();

   repeat(5)
     if(obj.randomize() with {a == 50;})
            $display("randomize successful a = %0d" , obj.a);
     else
            $display("failed");

end
endprogram

//output
