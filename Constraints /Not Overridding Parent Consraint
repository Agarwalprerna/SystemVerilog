class packet;
  rand integer  addr;
  constraint addr_range {addr<100 ; addr>0 ;}
endclass

//DIFFERENT CONSTRIANT NAMES OF CHILD AND PARENT CLASS

class child extends packet;
  constraint  addr_range2 { addr< 100; addr>50;}  
endclass


module exmtb;
  initial begin

//and since the object is of type child, only the child constraint is active.

    child P2;
    P2 = new();
    
    for(int i =0 ; i<100 ; i++)
      if(P2.randomize())
       $display("successfull: addr = %0d" , P2.addr);
      else
       $display("failed");    
  end
endmodule


//output

run -all
